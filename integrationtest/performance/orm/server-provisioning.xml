<server-provisioning xmlns="urn:wildfly:server-provisioning:1.2">
    <feature-packs>

        <feature-pack
                groupId="org.hibernate"
                artifactId="hibernate-search-jbossmodules-orm"
                version="${project.version}"/>

        <feature-pack groupId="org.wildfly" artifactId="wildfly-feature-pack" version="${version.wildfly}" />

    </feature-packs>

    <version-overrides>
        <!-- Override the version ORM depends on -->
        <version-override groupId="org.wildfly" artifactId="wildfly-feature-pack" version="${version.wildfly}" />
    </version-overrides>
</server-provisioning>
