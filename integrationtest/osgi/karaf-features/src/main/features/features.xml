        <bundle>wrap:mvn:org.apache.lucene/lucene-queryparser/${luceneVersion}</bundle>
        <bundle>wrap:mvn:org.apache.lucene/lucene-queries/${luceneVersion}$Export-Package=org.apache.lucene.queries;version="${luceneVersion}",org.apache.lucene.queries.function;version="${luceneVersion}",org.apache.lucene.queries.mlt;version="${luceneVersion}"</bundle>
        <bundle>wrap:mvn:org.apache.lucene/lucene-sandbox/${luceneVersion}</bundle>
