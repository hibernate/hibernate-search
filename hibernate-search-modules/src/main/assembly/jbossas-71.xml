<assembly>
	<id>jbossas-71-dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>/</baseDirectory>

	<files>
		<file>
			<source>${hibernate.search.as71.src.dir}/lucene/module.xml</source>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/apache/lucene/${luceneVersion}</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${hibernate.search.as71.src.dir}/solr/module.xml</source>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/apache/solr/${luceneVersion}</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${hibernate.search.as71.src.dir}/search/engine/module.xml</source>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/hibernate/search/engine/${hibernate.search.module.slot}</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${hibernate.search.as71.src.dir}/search/orm/module.xml</source>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/hibernate/search/orm/${hibernate.search.module.slot}</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/hibernate/search/engine/${hibernate.search.module.slot}</outputDirectory>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<unpack>false</unpack>
			<includes>
				<include>org.hibernate:hibernate-search-engine</include>
				<include>org.hibernate:hibernate-search-analyzer</include>
				<include>org.hibernate:hibernate-search-infinispan</include>
			</includes>
			<excludes>
				<exclude>org.apache.lucene:*</exclude>
				<exclude>org.apache.solr:*</exclude>
				<exclude>org.hibernate.common:*</exclude>
				<exclude>org.slf4j:slf4j-api:*</exclude>
				<exclude>org.jboss.logging:*</exclude>
				<exclude>org.jgroups:*</exclude>
				<exclude>org.jboss:*</exclude>
				<exclude>org.jboss.marshalling:*</exclude>
				<exclude>org.jboss.spec.javax.transaction:*</exclude>
				<exclude>org.infinispan:infinispan-core:*</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/hibernate/search/orm/${hibernate.search.module.slot}</outputDirectory>
			<useTransitiveFiltering>false</useTransitiveFiltering>
			<unpack>false</unpack>
			<includes>
				<include>org.hibernate:hibernate-search-orm</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/apache/lucene/${luceneVersion}</outputDirectory>
			<useTransitiveFiltering>false</useTransitiveFiltering>
			<unpack>false</unpack>
			<includes>
				<include>org.apache.lucene:*</include>
                <include>jakarta-regexp:jakarta-regexp:*</include>
			</includes>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>${hibernate.search.as71.target.dir}/org/apache/solr/${luceneVersion}</outputDirectory>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<unpack>false</unpack>
			<includes>
				<include>org.apache.solr:*</include>
				<include>com.google.guava:guava</include>
			</includes>
			<excludes>
				<exclude>org.apache.lucene:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
