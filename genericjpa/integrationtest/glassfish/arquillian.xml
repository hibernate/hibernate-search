<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemalocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian-1.0.xsd">
    <engine>
        <property name="deploymentExportPath">target/arquillian</property>
    </engine>

    <container default="true" qualifier="glassfish">
        <configuration>
        	<!-- we don't want this on the default port -->
        	<property name="bindHttpPort">60335</property>
            <property name="resourcesXml">src/test/resources/glassfish-embedded/glassfish-resources.xml</property>
        </configuration>
    </container>
</arquillian>