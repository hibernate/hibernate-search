<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.hibernate.search</groupId>
        <artifactId>hibernate-search-integrationtest-javaee</artifactId>
        <version>6.2.2-SNAPSHOT</version>
        <relativePath>../../..</relativePath>
    </parent>
    <artifactId>hibernate-search-integrationtest-java-modules-orm-coordination-outbox-polling-elasticsearch-javaee</artifactId>
    <packaging>jar</packaging>

    <name>Hibernate Search ITs - Java - Modules - ORM/Elasticsearch outbox polling - Java EE</name>
    <description>Hibernate Search integration tests for Java 11+ modules</description>

    <properties>
        <transform.original.pathFromRoot>integrationtest/java/modules/orm-coordination-outbox-polling-elasticsearch</transform.original.pathFromRoot>

        <test.elasticsearch.run.skip>${test.elasticsearch.connection.uris.defined}</test.elasticsearch.run.skip>
        <test.database.run.skip>false</test.database.run.skip>

        <maven.compiler.release>11</maven.compiler.release>
        <!-- Override the default from the parent POM: here we really do want to use the modulepath -->
        <failsafe.useModulePath>true</failsafe.useModulePath>

        <surefire.jvm.args.module>
            ${test.elasticsearch.connection.jvm.args}
        </surefire.jvm.args.module>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.hibernate.search</groupId>
            <artifactId>hibernate-search-mapper-orm-javaee</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hibernate.search</groupId>
            <artifactId>hibernate-search-backend-elasticsearch</artifactId>
        </dependency>

        <dependency>
            <groupId>org.hibernate.search</groupId>
            <artifactId>hibernate-search-mapper-orm-coordination-outbox-polling-javaee</artifactId>
        </dependency>

        <dependency>
            <groupId>org.hibernate.search</groupId>
            <artifactId>hibernate-search-util-internal-test-orm-javaee</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>${jdbc.driver.groupId}</groupId>
            <artifactId>${jdbc.driver.artifactId}</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <executions>
                    <execution>
                        <id>it</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
