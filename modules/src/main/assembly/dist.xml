<assembly>
    <id>wildfly-8-dist</id>
    <formats>
        <format>zip</format>
        <format>dir</format> <!-- For ease of debugging only -->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>/</baseDirectory>

    <files>
        <file>
            <source>${module.xml.basedir}/lucene/module.xml</source>
            <outputDirectory>/org/apache/lucene/${lucene.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/search/engine/module.xml</source>
            <outputDirectory>/org/hibernate/search/engine/${hibernate.search.version}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${aliases.xml.basedir}/search/engine/module.xml</source>
            <outputDirectory>/org/hibernate/search/engine/${hibernate.search.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/search/orm/module.xml</source>
            <outputDirectory>/org/hibernate/search/orm/${hibernate.search.version}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${aliases.xml.basedir}/search/orm/module.xml</source>
            <outputDirectory>/org/hibernate/search/orm/${hibernate.search.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/search/backend-jms/module.xml</source>
            <outputDirectory>/org/hibernate/search/backend-jms/${hibernate.search.version}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/search/serialization-avro/module.xml</source>
            <outputDirectory>/org/hibernate/search/serialization-avro/${hibernate.search.version}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/search/infinispan-storage/module.xml</source>
            <outputDirectory>/org/hibernate/search/infinispan-storage/${infinispan.integration.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/search/engine/${hibernate.search.version}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate:hibernate-search-engine</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/search/serialization-avro/${hibernate.search.version}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate:hibernate-search-serialization-avro</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/search/orm/${hibernate.search.version}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate:hibernate-search-orm</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/search/backend-jms/${hibernate.search.version}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate:hibernate-search-backend-jms</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/search/infinispan-storage/${infinispan.integration.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate:hibernate-search-infinispan</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/apache/lucene/${lucene.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.apache.lucene:*</include>
            </includes>
            <excludes>
                <exclude>org.apache.lucene:lucene-sandbox</exclude>
            </excludes>
        </dependencySet>

    </dependencySets>
</assembly>
