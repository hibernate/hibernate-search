<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.hibernate</groupId>
        <artifactId>hibernate-search-jbossmodules-parent</artifactId>
        <version>5.9.0-SNAPSHOT</version>
    </parent>

    <artifactId>hibernate-search-jbossmodules-hibernate-orm</artifactId>
    <packaging>pom</packaging>

    <name>Hibernate Search JBoss Modules - Temporary Hibernate ORM Repackaging</name>
    <description>Temporary repackaging of Hibernate ORM modules as a Wildfly feature pack</description>

    <properties>
        <featurepack.dir>${project.build.directory}/feature-pack/src/main/resources</featurepack.dir>
        <template.dir>${featurepack.dir}/modules/</template.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-envers</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-infinispan</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>net.bytebuddy</groupId>
            <artifactId>byte-buddy</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.wildfly</groupId>
            <artifactId>jipijapa-hibernate5</artifactId>
            <version>${wildflyVersion}</version>
            <exclusions>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.wildfly</groupId>
            <artifactId>wildfly-feature-pack</artifactId>
            <type>zip</type>
            <exclusions>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>gen-module-core</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${template.dir}/system/layers/base/org/hibernate/${hibernate.orm.slot.full.id}/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/modules/org/hibernate/core</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gen-alias-core</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${template.dir}/system/layers/base/org/hibernate/${hibernate.orm.slot.simple.id}/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/aliases/org/hibernate/core</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gen-module-infinispan</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${template.dir}/system/layers/base/org/hibernate/infinispan/${hibernate.orm.slot.full.id}/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/modules/org/hibernate/infinispan</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gen-alias-infinispan</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${template.dir}/system/layers/base/org/hibernate/infinispan/${hibernate.orm.slot.simple.id}/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/aliases/org/hibernate/infinispan</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gen-module-jipijapa-hibernate5</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${template.dir}/system/layers/base/org/hibernate/jipijapa-hibernate5/${hibernate.orm.slot.full.id}/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/modules/org/hibernate/jipijapa-hibernate5</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gen-alias-jipijapa-hibernate5</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${template.dir}/system/layers/base/org/hibernate/jipijapa-hibernate5/${hibernate.orm.slot.simple.id}/</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/aliases/org/hibernate/jipijapa-hibernate5</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gen-feature-pack-buildfile</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${featurepack.dir}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/feature-pack-def</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.wildfly.build</groupId>
                <artifactId>wildfly-feature-pack-build-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>feature-pack-build</id>
                        <goals>
                            <goal>build</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <config-file>feature-pack-template.xml</config-file>
                            <config-dir>${featurepack.dir}</config-dir>
                            <resourcesDir>/</resourcesDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <finalName>${project.artifactId}-${project.version}</finalName>
                    <descriptors>
                        <descriptor>${basedir}/assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
